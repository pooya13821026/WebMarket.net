@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-black">لیست دسته ها</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="category" asp-action="create" class="btn btn-outline-dark">ایجاد دسته جدید</a>
        </div>
    </div>
    <br />
    <table class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    نام دسته
                </th>
                <th>
                    ترتیب نمایش
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="50%">
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="m-75 btn-group" role="group">
                            <a asp-controller="category" asp-action="edit" asp-route-id="@obj.Id">
                                ویرایش
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="m-75 btn-group" role="group">
                            <a asp-controller="category" asp-action="delete" asp-route-id="@obj.Id">
                                حذف
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

